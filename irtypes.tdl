i_ilr := infl-ltow-rule & 
  [ SYNSEM.LOCAL.CAT.HEAD interj ].

sp_ilr :=  infl-ltow-rule & 
  [ SYNSEM.LOCAL.CAT.HEAD adp ].

cs_ilr :=  infl-ltow-rule & 
  [ SYNSEM.LOCAL.CAT.HEAD +pc ].

cc_ilr :=  infl-ltow-rule & 
  [ SYNSEM.LOCAL.CAT.HEAD conj ].

; -- named entities
