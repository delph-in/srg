pd0cp00_ilr :=  pd_ilr & pl_ilr.

; -- relative pron.
pr0cs00_ilr := pr_sg_ilr.
pr0cp00_ilr := pr_pl_ilr.
pr0cn00_ilr := pr_ilr.
