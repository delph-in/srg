dp1cps_ilr :=  dp_ilr & 3pl_ilr.
ap0ms1p_ilr :=  dp_ilr & masc_3sg_ilr.
ap0mp1p_ilr :=  dp_ilr & masc_3pl_ilr.
ap0fs1p_ilr :=  dp_ilr & fem_3sg_ilr.
ap0fp1p_ilr :=  dp_ilr & fem_3pl_ilr.
dp2css_ilr :=  dp_ilr & 3sg_ilr.
dp2cps_ilr :=  dp_ilr & 3pl_ilr.
